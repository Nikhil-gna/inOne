<%- include('partials/header') %> <%- include('partials/nav') %>
<body id="qrscan">
<h1>QR Code Scanner</h1>
<main>
  <div id="reader"></div>
  <div id="result" ></div>
</main>
<!-- <video id="preview" class=""></video> -->
<script>
  // console.log(Html5QrcodeScanner);

const scanner = new Html5QrcodeScanner("reader", {
    fps: 20,
    qrbox: {
      width: 250,
      height: 250,
    },
  });
  scanner.render(success, error);

  // `<h1>Click to get page </h1>` +
  function success(result) {
    document.getElementById("result").innerHTML =
       `<p> <a style="background-color: #5865f2;
    color: white;
    padding: 12px 60px;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    font-size: 16px;" href="${result}">OPEN</a> </p>`;
    scanner.clear();
    document.getElementById("reader").remove();
  }

  function error(err) {
    console.log(err);
  }
   
</script>
